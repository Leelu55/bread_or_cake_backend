{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    ".eslintrc.cjs",
    "node_modules",
    "jest.config.js",
    "**/*.test.ts"
  ],
  "include": ["src/**/*"]
}
